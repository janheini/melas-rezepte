---
const { tag } = Astro.props;
---

<div>
    <input
        id={tag}
        name="filter"
        value={tag}
        type="checkbox"
        hx-post="/"
        class="appearance-none peer"
    />
    <label
        for={tag}
        class="border-2 rounded-full p-2 peer-checked:bg-accent peer-checked:text-black"
        >{tag}
    </label>
</div>
