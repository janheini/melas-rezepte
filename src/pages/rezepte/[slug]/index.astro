---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getEntry } from "astro:content";
import { PencilSquareIcon } from "@heroicons/vue/24/solid";
import { Image } from "astro:assets";

const { slug } = Astro.params;

if (!slug) {
    return new Response(null, {
        status: 404,
        statusText: "Not found",
    });
}

const post = await getEntry("rezepte", slug);

if (!post) {
    return new Response(null, {
        status: 404,
        statusText: "Not found",
    });
}

const ingredients =
    post.data.ingredients && post.data.ingredients.length > 0
        ? post.data.ingredients
        : undefined;

const ingredientList =
    post.data.ingredientList && post.data.ingredientList.length > 0
        ? post.data.ingredientList
        : undefined;

const { Content } = await post.render();

const user = Astro.locals.user;
---

<BaseLayout>
    <div
        class="prose-default prose m-auto max-w-xl py-10 dark:prose-invert dark:text-gray-300"
    >
        <h2 class="flex items-center justify-between">
            {post.data.title}
            {
                user && (
                    <a href="edit">
                        <PencilSquareIcon class="h-5 w-5" />
                    </a>
                )
            }
        </h2>
        {post.data.image && <Image src={post.data.image} alt="" />}
        <content>
            {(ingredients || ingredientList) && <h3>Zutaten</h3>}
            {
                ingredients && (
                    <>
                        <ul>
                            {ingredients.map((i) => (
                                <li>{i}</li>
                            ))}
                        </ul>
                    </>
                )
            }
            {
                ingredientList && (
                    <>
                        {ingredientList.map((item) => (
                            <>
                                <h4>{item.title}</h4>
                                <ul>
                                    {item.ingredients.map((i) => (
                                        <li>{i}</li>
                                    ))}
                                </ul>
                            </>
                        ))}
                    </>
                )
            }
            <h3>Anleitung</h3>
            <Content />
        </content>
    </div>
</BaseLayout>
